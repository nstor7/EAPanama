.subMenu
  width: 100%
  height: 150px
  display: flex
  justify-content: center
  background: #F3F6F8
  padding: 0 10%
  box-sizing: border-box
  .subMenuSeccion
    width: 25%
    height: 100%
    color: #888
    text-align: center
    align-items: center
    &:hover
      background: #E4E7E9
      color: #333
      cursor: pointer
    .fa
      font-size: 2rem
      margin: 35px 0 12px 0
    h4
      font-family: 'Montserrat', sans-serif
      font-size: 0.8rem
.scrolled
  height: 75px
  position: fixed
  top: 50px
  .subMenuSeccion
    .fa
      margin: 20px 0 0 0
    h4
      display: none
.posicionado
  background: #E4E7E9
  color: #333
