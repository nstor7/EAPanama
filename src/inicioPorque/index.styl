.porque
  position absolute
  top 200vh
  z-index: 1
  background: #f3f6f8
  display block
  .porqueTitulo
    text-align: center
    width 100%
    margin-top 100px
    h2
      font-size: 36px
      color: #333
      margin 0 0 15px 0
    p
      font-size: 16px
      color: #666
      margin: 0 0 35px 0
      line-height: 1.6
      text-align: center
      padding: 0 125px
      font-family: 'Montserrat', sans-serif
  .porqueContenido
    display flex
    justify-content: space-around
    .porqueLista
      width 50%
      li
        list-style: none
        font-family: 'Open Sans', sans-serif
        font-size: 18px
        color: #333
        font-weight: bold
        line-height: 1.6
        margin: 0 0 20px 0
        span
          width: 38px
          height: 38px
          float: left
          border: 1px solid #999
          border-radius: 20px
          line-height: 38px
          text-align: center
          font-size: 18px
          color: #666
          margin: -5px 20px 0 0
    .porqueCriticas
      width 415px
      height: 280px
      background: #e1e1e1
