.tarjeta
  width: 30vw
  height: 45vw
  display: flex
  flex-wrap: wrap
  justify-content: center
  background: white
  text-decoration: none
  padding 3vw
  box-sizing: border-box
  position relative
  @media(max-width: 800px)
    width: 90vw
    height: 135vw
    padding: 9vw
  &:hover
    box-shadow: 0.5px 0.5px 30px grey
  .tarjetaImagen
    width: 100%
    height: 48%
  .tarjetaTexto
    width: 100%
    height: 48%
    color: black
    position: relative
    h3
      font-family: 'Montserrar', sans-serif
      font-size: 1.875vw
      margin-bottom: 0
      @media(max-width: 800px)
        font-size: 5.625vw
    h5
      margin: 0.625vw 0 0 0
      font-family: 'Roboto Slab', serif
      font-size: 1vw
      font-weight: 300
      color: #aaa
      @media(max-width: 800px)
        margin-top: 1.875vw
        font-size:  3vw
    p
      font-family: 'Montserrat', sans-serif
      color: grey
      line-height: 1.75vw
      border-top: 1px solid #ddd
      padding-top: 0.625vw
      margin-top: 0.25vw
      @media(max-width: 800px)
        line-height: 5.25vw
        padding-top: 1.875vw
        margin-top: 0.75vw
  .social
    flex-wrap: wrap
    justify-content: space-between
    width: 8vw
    position absolute
    right: 3vw
    bottom: 3vw
    @media(max-width: 800px)
      right: 9vw
      bottom: 9vw
      width: 24vw
    a
      color: grey
    a:hover
      color: white
      cursor pointer
.blogSection
  height: auto
  background: #E9E9E9
  padding: 40px 40px 24px 40px
  box-sizing: border-box
  justify-content: space-between
  @media(max-width: 380px)
    padding 40px 0 24px 0
    justify-content: center
