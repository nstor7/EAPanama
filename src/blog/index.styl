.tarjeta
  width: 30%
  min-width: 400px
  height: 600px
  display: flex
  flex-wrap: wrap
  justify-content: center
  background: white
  text-decoration: none
  margin-bottom: 2rem
  padding 30px
  box-sizing: border-box
  position relative
  @media(max-width: 800px)
    width: 90vw
  &:hover
    box-shadow: 0.5px 0.5px 30px grey
  .tarjetaImagen
    width: 90%
    height: 290px
  .tarjetaTexto
    width: 90%
    height: 250px
    color: black
    position: relative
    h3
      font-family: 'Montserrar', sans-serif
      font-size: 1.5rem
      margin-bottom: 0
    h5
      margin: 0.5rem 0 0 0
      font-family: 'Roboto Slab', serif
      font-size: 0.8rem
      font-weight: 300
      color: #aaa
    p
      font-family: 'Montserrat', sans-serif
      color: grey
      line-height: 1.4rem
      border-top: 1px solid #ddd
      padding-top: 0.5rem
      margin-top: 0.2rem
.social
  flex-wrap: wrap
  justify-content: space-between
  width: 140px
  position absolute
  right: 10%
  bottom: 40px
  a
    color: grey
  a:hover
    color: white
    cursor pointer
.blogSection
  height: auto
  background: #E9E9E9
  padding: 40px 40px 24px 40px
  box-sizing: border-box
  justify-content: space-between
  @media(max-width: 380px)
    padding 40px 0 24px 0
    justify-content: center
