.demasPortada
  width: 100%
  height: 430px
  background: none
  display: flex
  justify-content: space-between
  @media(max-width: 900px)
    display: block
  .demasPortadaImagen
    width: 55%
    height: 430px
    background-size: cover
    background-repeat: no-repeat
    opacity: 0.8
    z-index: -1
    @media(max-width: 900px)
      position absolute
      width: 100%
      opacity: 0.5
  hgroup
    background: linear-gradient(to bottom, #404347, #050506)
    height: 430px
    width: 45%
    display: block
    padding: 100px 0 0 100px
    box-sizing: border-box
    @media(max-width: 900px)
      position absolute
      width: 100%
      background: none
      padding 200px 0 0 0
      text-align: center
      vertical-align: bottom
      box-sizing: border-box
    h2
      color: white
      font-family: 'Montserrat', sans-serif
      font-size: 4rem
      text-transform: uppercase
      margin 0
      @media(max-width: 900px)
        font-size: 2rem
    p
      color: white
      font-family: 'Open Sans', sans-serif
      font-weight: 300
      font-size: 1rem
      margin 0
