.demasPortada
  margin-top -70px
  width: 100%
  height: 430px
  background: none
  display: flex
  justify-content: space-between
  .demasPortadaImagen
    width: 55%
    height: 430px
    background-size: contain
    z-index: -1
  hgroup
    background: linear-gradient(to bottom, #404347, #050506)
    height: 430px
    width: 45%
    display: block
    z-index: -1
    padding: 100px 0 0 100px
    box-sizing: border-box
    h2
      color: white
      font-family: 'Montserrat', sans-serif
      font-size: 4rem
      text-transform: uppercase
      margin 0
    p
      color: white
      font-family: 'Open Sans', sans-serif
      font-weight: 300
      font-size: 1rem
      margin 0
