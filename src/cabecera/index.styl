.demasPortada
  width: 100%
  height: 35vw
  background: none
  display: flex
  justify-content: space-between
  @media(max-width: 900px)
    width: 100vw
    height: 63vw
  .demasPortadaImagen
    width: 55vw
    height: 35vw
    background-size: cover
    opacity: 0.8
    z-index: -1
    @media(max-width: 900px)
      width: 100vw
      height: 63vw
      opacity: 0.5
  hgroup
    background: linear-gradient(to bottom, #404347, #050506)
    height: 35vw
    width: 45vw
    display: block
    padding: 15vw 0 0 8vw
    box-sizing: border-box
    @media(max-width: 900px)
      position absolute
      width: 100%
      background: none
      text-align: center
      box-sizing: border-box
    h2
      color: white
      font-family: 'Montserrat', sans-serif
      font-size: 4rem
      text-transform: uppercase
      margin 0
      @media(max-width: 900px)
        font-size: 2rem
    p
      color: white
      font-family: 'Open Sans', sans-serif
      font-weight: 300
      font-size: 1rem
      margin 0
