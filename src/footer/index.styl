footer
  position: relative
  background: white
  background: #F3F6F8
  padding: 40px 40px 0
  .footerCuerpo
    display: flex
    justify-content: space-around;
    flex-wrap: wrap
    width: 100%
    div
      width: 250px
      height:300
      margin-bottom: 1rem
      div
        width: 100%
        margin 0
      .footerLogo
        background url('imagenes/img-logos/eapanama-logolong-750x400.png')
        background-size cover
        repeat none
        height 120px
        width 225px
      .footerContenido
        text-align: left
        color: #666
        line-height: 1.6
        padding-bottom: 15px
        font-family: 'Open Sans', sans-serif
        font-size: 13px
      .footerContacto
        padding-top: 20px
        div
          margin 0
          .fa-phone
            background: #92B41B
            border-radius: 50%
            width: 22px
            height: 22px
            text-align: center
            color: white
            line-height: 22px
            margin-right: 0.5rem
        a
          text-decoration: none
          .fa-envelope
            width: 22px
            height: 22px
            font-size: 20px
            text-align: center
            color: #92B41B
            line-height: 22px
            margin: 0.5rem 0.5rem 0 0
          span
            color black
      h3
        font-size: 14px
        color: #111
        text-transform: uppercase
        font-weight: bold
        margin: 0 0 20px 0
        font-family: 'Montserrat', sans-serif
      ul
        list-style: none
        text-align: left
        padding: 0
        li
          font-size: 14px
          color: #666
          padding: 5px 0
          line-height: 1.4
          a
            text-decoration: none
            color: #333
            display: flex
            flex-wrap: nowrap
            .imgVlog
              width: 77px
              height: 49px
              margin-right: 1rem
  .footerPie
    border-top: 1px solid #ddd
    p
      margin 0
      padding 2em 0
      font-size: 12px;
      color: #666;
      font-family: 'Open Sans', sans-serif
