.portfolio 
  background: black
.negro
  width: 100vw
  height: 67px
  background: black
.portafolio
  width: 100vw
  height: 40vw
  display: flex
  flex-wrap: wrap
  @media(max-width: 900px)
    height: auto
  .portafolioLibraries
    height: 40vw
    width: 32vw
    background: #1F1F1F
    box-sizing: border-box
    @media(max-width: 900px)
      width: 90vw
      height: auto
      order: 2
    .tabButton
      display: flex
      justify-content: flex-start
      color: #ddd
      padding-left: 1vw
      border none
      height: 4vw
      width: 100%
      line-height: 4vw
      background: none
      box-sizing: border-box
      @media(max-width: 900px)
        height: 50px
        padding-left: 1rem
      &:hover
        background: rgba(80, 80, 80, 0.6)
        cursor: pointer
      &:focus
        border none
        background: rgba(80, 80, 80, 0.6)
      .fa
        margin-right: 2rem
        font-size: 1rem
        line-height: 4vw
        @media(max-width: 900px)
          line-height: 50px
      h4
        margin: 0
        @media(max-width: 900px)
          line-height: 50px
    .tabEspacio
      height: 21vw
      background: #505050
      width: 100%
      box-shadow: 1px 1px 10px #333 inset
      display: none
      overflow: scroll
      @media(max-width: 900px)
          height: auto
    .active
      display: flex
      justify-content: space-between
      padding: 2vw
      box-sizing: border-box
      .miniatura
        height: 10vw
        width: 12.5vw
        cursor: pointer
        @media(max-width: 900px)
          height: 32vw
          width: 40vw
  .portafolioViewer
    height: 40vw
    width: 68vw
    background-size: contain
    @media(max-width: 900px)
      width: 96vw
      height: 54vw
      order: 1
