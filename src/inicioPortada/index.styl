h2
  font-family: 'Montserrat', sans-serif
#bgvid
  position absolute
  top -150px
  width: 100%
  z-index: -2
  opacity: 0.6
  @media(max-width: 1000px)
    top 0
  @media(max-width: 600px)
    display: none
.indexPortada
  height: 100vh
  max-height: 900px
  box-sizing border-box
  padding-top 190px
  width: 100%
  top 0
  text-align: center
  color: white
  @media(max-height: 600px)
    display: flex
    flex-wrap: wrap
    justify-content: center
    align-items: flex-end
    height: auto
    padding: 70px 0 70px
  h1
    display: block
    font-family: 'Roboto Slab', serif
    font-size: 4rem
    font-weight: 300
    margin 0
    @media(max-width: 600px)
      font-size: 2.5rem
  h2
    display: block
    font-size 3.5rem
    vertical-align: baseline
    margin 0 0 15px 0
    @media(max-width: 600px)
      font-size: 2.5rem
  p
    display: block
    font-family 'Open Sans', sans-serif
    font-size 1rem
    vertical-align: baseline
    margin 0 0 45px 0
.callToAction
  width: 225px
  height: 46px
  display: block
  border-radius: 5px
  background: #c8db4d
  margin: 0 auto
  font-size: 14px
  text-transform: uppercase
  line-height: 46px
  color: #fff
  text-decoration: none
  letter-spacing: 1px
  box-shadow: 0 -3px rgba(0,0,0,0.3) inset
  font-family: 'Montserrat', sans-serif
  vertical-align: baseline
  text-align: center
.callToAction:hover
  background: #69645e
