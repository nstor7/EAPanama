.productosSeccion
  height: auto
.productoEstante
  width: 100%
  margin-top: 40px
  h2
    text-align: center
    strong
      background white
      padding 0 50px
      color: rgb(51, 51, 51)
      font-size: 1.25rem
    span
      width: 85%
      height: 1px
      display: block;
      background: #e2e9ee;
      margin: -12px auto 0
      @media(max-width: 800px)
        display: none
.productoEstanteria
  width: 85%
  margin: 50px auto 0
  display: flex
  flex-wrap: wrap
  justify-content: space-between
.productoTarjeta
  width: 6vw
  height: 8vw
  position: relative
  text-decoration: none
  margin-bottom: 40px
  @media(max-width: 800px)
    width: 90vw
    height: 97vw
  h4
    position: absolute
    width: 100%
    margin 0
    top 1rem
    text-align: center
    color: #333
    font-family: 'Open Sans', sans-serif
    font-size: 1rem
    z-index: 3
  .productoOver
    width: 100%
    height: 100%
    background: rgba(211, 226,112, 0.85);
    padding-top 2rem
    opacity: 0
    .productoOverImagen
      width: 10vw
      height: 7vw
      margin 20px auto 1rem
      transition: margin-top 1s ease
      @media(max-width: 800px)
        width: 35vw
        height: 24vw
    p
      border-top: 1px solid #eee
      margin 0 20px
      padding-top: 1rem
      color: #fefefe
      font-family: 'Open Sans', sans-serif
      font-size: 0.8rem
      line-height: 1.5rem
      font-weight: 300
.productoTarjeta:hover
  .productoOver
    opacity: 1
    .productoOverImagen
      margin-top: 5vw
      @media(max-width: 800px)
        margin-top: 18vw
  h4
    color: #fefefe
    font-weight: 300
.oficial
  h5
    font-family: 'Montserrat', sans-serif
    font-size: 0.8rem
    color: #333
    margin-bottom: 0
  .distribuidor
    height: 5vw
    width: 40vw
    background: url('imagenes/acoustical-surfaces.png')
    background-size: contain
    display: block
    @media(max-width: 800px)
      width: 80vw
      height: 10vw
